{
  "eslint.enable": true, //是否开启vscode的eslint
  "eslint.validate": [
    {
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "html",
      "autoFix": true
    },
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "typescript",
      "autoFix": true
    }
  ],
  "eslint.autoFixOnSave": true,
  "editor.formatOnSave": true,
  "tslint.autoFixOnSave": true, //是否在保存的时候自动fix eslint
  "typescript.tsdk": "node_modules/typescript/lib"
}
